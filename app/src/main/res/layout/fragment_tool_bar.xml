<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.bigsisters.bigsisters.ToolBar">
    <android.support.v7.widget.Toolbar

        android:id="@+id/my_toolbar"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light"
        android:background="?colorAccent"
        >
        <ImageButton
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:id="@+id/home_button"
            android:src="@drawable/home168"
            android:background="?colorAccent"/>
        <ImageButton
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:id="@+id/fave_button"
            android:src="@drawable/favorite21"
            android:background="?colorAccent"/>
        <ImageButton
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:id="@+id/msg_button"
            android:src="@drawable/email5"
            android:background="?colorAccent"/>


    </android.support.v7.widget.Toolbar>




</FrameLayout>
