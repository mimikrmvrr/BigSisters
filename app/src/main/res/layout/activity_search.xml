<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bigsisters.bigsisters.SearchActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:name="com.bigsisters.bigsisters.ToolBar" />


    <EditText

        android:id="@+id/name"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Location"
        android:layout_below="@id/name"/>
    <Button
        android:id="@+id/locButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use my location"
        android:layout_below="@id/location"
        />
    <LinearLayout
        android:paddingTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locButton"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/att0"
            android:textSize="25dp"
            android:background="?colorAccent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/att1"
            android:textSize="25dp"
            android:background="?colorAccent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/att2"
            android:textSize="25dp"

            android:background="?colorAccent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/att3"
            android:textSize="25dp"
            android:background="?colorAccent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"/>
    />

</RelativeLayout>
